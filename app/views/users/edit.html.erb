<div class="user_new">
  <% if flash[:notice].present? %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>
<nav>
	<a class="brand-logo center" href="/">VehicleList</a>
	<ul class="left">
		<li> <a href="/vehicles">Veh√≠culos</a> </li>
	</ul>

	<ul class="right">
		<li> <a href="users">Usuarios</a> </li>
	</ul>

</nav>
<div class="wrapper">
	<div class="background-users"><%= image_tag 'main-background.jpg' %></div>
	<div class="form__wrapper">
		<%= form_for @user do |f| %>
			<p>
				<%= f.label :name %>
			<br>
				<%= f.text_field :name %>
			</p>

			<p>
				<%= f.label :last_name %>
			<br>
				<%= f.text_field :last_name %>
			</p>

			<p>
				<%= f.label :born_date %>
			<br>
				<%= f.date_field :born_date %>
			</p>

			<p>
				<%= f.label :identification %>
			<br>
				<%= f.text_field :identification %>
			</p>

			<p>
				<%= f.label :profession %>
			<br>
				<%= f.text_field :profession %>
			</p>

			<p>
				<%= f.submit 'Editar', class: 'btn' %>
			</p>


		<% end %>
	</div>
</div>

